<!DOCTYPE html>
<html lang="en">

{{>partials/header}}

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    {{> admin/includes/sidebar }}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{> admin/includes/topbar }}
            <!-- End of Topbar -->

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Kapkatet Tea Factory User Roles</h1>
                <p class="mb-4">All the users of the system are divided in the following roles</p>

                {{#ROLES_AVAILABLE}}

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Users roles</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
                                <tbody>

                                {{#roles}}
                                <tr>
                                    <td>{{ id }}</td>
                                    <td>{{ name }}</td>
                                    <td class="d-flex justify-content-around">
                                        <a href="/admin/roles/{{ id }}/edit" class="btn btn-sm btn-primary">
                                            <i class="fa fa-edit"> </i>
                                        </a>
                                        <a role="button" href="#" data-toggle="modal"
                                           data-target="#delete-role-{{id}}" class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash-alt"> </i>
                                        </a>

                                        {{> /admin/includes/modals/delete-role-confirmation }}

                                    </td>
                                </tr>
                                {{/roles}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                {{/ROLES_AVAILABLE}}

                {{^ROLES_AVAILABLE}}
                <div class="font-weight-bold">No Centers Added Yet</div>
                {{/ROLES_AVAILABLE}}

            </div>

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


{{>partials/footer}}

</body>
</html>