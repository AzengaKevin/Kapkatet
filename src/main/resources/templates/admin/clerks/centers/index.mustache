<!DOCTYPE html>
<html lang="en">

{{>partials/header}}

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    {{> admin/includes/sidebar }}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{> admin/includes/topbar }}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h3 class="h3 mb-0 text-gray-800 text-center">Centers assigned for <em>{{ currentUser.name }}</em>
                    </h3>


                    <a href="/admin/clerks/{{ currentUser.id }}/centers/assign"
                       class="btn btn-info btn-sm btn-icon-split">
                        <span class="icon text-white-50"><i class="fas fa-plus"> </i></span>
                        <span class="text">Assign Center</span>
                    </a>

                </div>


                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Your Scheduled Centers</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Center</th>
                                    <th>Transaction Time</th>
                                    <th>Weekdays</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Center</th>
                                    <th>Transaction Time</th>
                                    <th>Weekdays</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
                                <tbody>

                                {{#schedule}}
                                <tr>
                                    <td>{{ id }}</td>
                                    <td>{{ centerId }}</td>
                                    <td>{{ expectedTransactionTime }}</td>
                                    <td>{{ weekdays }}</td>
                                    <td class="d-flex justify-content-around">

                                        <a href="#" class="btn btn-primary btn-sm">
                                            <i class="fa fa-edit"> </i>
                                        </a>
                                        <a href="#" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash-alt"> </i>
                                        </a>

                                    </td>
                                </tr>
                                {{/schedule}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


{{>partials/footer}}

</body>
</html>