<!DOCTYPE html>
<html lang="en">

{{>partials/header}}

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    {{> admin/includes/sidebar }}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{> admin/includes/topbar }}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-center mb-4">
                    <h3 class="h3 mb-0 text-gray-800 text-center">Add Center for <em>{{ currentUser.name }}</em></h3>
                </div>


                <!-- Content Row -->
                <div class="row justify-content-center">

                    <!-- Content Column -->
                    <div class="col-lg-8 mb-4">

                        <form action="/admin/clerks/{{ currentUser.id }}/centers" method="post">

                            <input type="hidden" name="_csrf" value="{{ _csrf }}"/>

                            <div class="form-group">

                                <label for="center-id">Choose Center</label>

                                <select class="custom-select" name="centerId" id="center-id">
                                    {{#centers}}
                                    <option value="{{ id }}">{{ name }}</option>
                                    {{/centers}}
                                </select>

                            </div>

                            <div class="form-group">
                                <label for="weekdays">Week Days</label>
                                <select name="weekdays" id="weekdays" class="custom-select" multiple>
                                    <option value="Monday">Monday</option>
                                    <option value="Tuesday">Tuesday</option>
                                    <option value="Wednesday">Wednesday</option>
                                    <option value="Thursday">Thursday</option>
                                    <option value="Saturday">Saturday</option>
                                    <option value="Sunday">Sunday</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="expected-transaction-time">Expected Transaction Time</label>
                                <input type="time" name="expectedTransactionTime" id="expected-transaction-time"
                                       class="form-control"/>
                            </div>

                            <div class="clearfix mb-3">
                                <button class="btn btn-primary float-right">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


{{>partials/footer}}

</body>
</html>